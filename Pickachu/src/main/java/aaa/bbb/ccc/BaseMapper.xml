<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="aaa.bbb.ccc.BaseMapper">
  <select id="selectPost" resultType="aaa.bbb.ccc.entity.Post">
    select * from MyPost where postId = #{postId}
  </select>
  <select id="selectReply" resultType="aaa.bbb.ccc.entity.Reply">
    select * from MyPostReply where id = #{id}
  </select>
  <select id="allPost" resultType="aaa.bbb.ccc.entity.Post">
    select * from MyPost order by postId desc 
  </select>
  <select id="limitPost" resultType="aaa.bbb.ccc.entity.Post">
    select * from MyPost order by postId desc limit #{pageSize} offset #{currentPage}
  </select>
   <select id="allReply" resultType="aaa.bbb.ccc.entity.Reply">
    select * from MyPostReply where postId = #{postId} AND replyId is null order by id desc
  </select>
  <select id="reReply" resultType="aaa.bbb.ccc.entity.Reply">
    select * from MyPostReply where replyId = #{id} order by id desc
  </select>
  <select id="searchPost" resultType="aaa.bbb.ccc.entity.Post" parameterType="String">
  <bind name="search" value="'%' + _parameter + '%'" />
    select * from MyPost where instaId like #{search} or description like #{search}
  </select>
  <select id="searchLimitPost" resultType="aaa.bbb.ccc.entity.Post" parameterType="aaa.bbb.ccc.entity.PageManager" >
   <bind name="search1" value="'%' + _parameter.search + '%'" />
    select * from MyPost where instaId like  #{search1} or description like #{search1} limit #{pageSize} offset #{currentPage}
  </select>
  <select id="countPost" resultType="Integer">
    select count(*) as totalSize from hong.MyPost
  </select>
  <select id="countSearchPost" resultType="Integer" parameterType="String">
  <bind name="search" value="'%' + _parameter + '%'" />
    select count(*) as totalSize from hong.MyPost where instaId like #{search} or description like #{search}
  </select>
  <insert id="insertPost" parameterType="aaa.bbb.ccc.entity.Post">
    insert into MyPost (hong.MyPost.create,picture,instaId,description) values (now(),#{picture},#{instaId},#{description})
  </insert>
  <insert id="insertReply" parameterType="aaa.bbb.ccc.entity.Reply">
    insert into MyPostReply (hong.MyPostReply.create,instaId,description,postId) values (now(),#{instaId},#{description},#{postId})
  </insert>
  <insert id="insertReReply" parameterType="aaa.bbb.ccc.entity.Reply">
    insert into MyPostReply (hong.MyPostReply.create,instaId,description,postId,replyId) values (now(),#{instaId},#{description},#{postId},#{replyId})
  </insert>
  <update id="updatePost" parameterType="aaa.bbb.ccc.entity.Post">
    update MyPost set instaId=#{instaId} , picture=#{picture}, description=#{description} where postId=#{postId}
  </update>
  <update id="updateReply" parameterType="aaa.bbb.ccc.entity.Reply">
    update MyPostReply set instaId=#{instaId} , description=#{description} where id=#{id}
  </update>
  <delete id="deletePost" parameterType="Integer">
    delete from MyPost where postId=#{postId}
  </delete>
  <delete id="deleteReply" parameterType="Integer">
    delete from MyPostReply where id=#{id}
  </delete>
</mapper>